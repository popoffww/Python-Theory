<CustButton@Button>:
    font_size: 32

<CalcBoxLayout>:
    id: calculator
    display: entry
    orientation: 'vertical'
    TextInput:
        id: entry
        size_hint: 1, .2
        font_size: 40
        multiline: False

    GridLayout:
        cols: 4
        size_hint: 1, .5
        spacing: 2

        CustButton:
            text: '7'
            on_press: entry.text += self.text
        CustButton:
            text: '8'
            on_press: entry.text += self.text
        CustButton:
            text: '9'
            on_press: entry.text += self.text
        CustButton:
            text: '+'
            on_press: entry.text += self.text
        CustButton:
            text: '4'
            on_press: entry.text += self.text
        CustButton:
            text: '5'
            on_press: entry.text += self.text
        CustButton:
            text: '6'
            on_press: entry.text += self.text
        CustButton:
            text: '-'
            on_press: entry.text += self.text
        CustButton:
            text: '1'
            on_press: entry.text += self.text
        CustButton:
            text: '2'
            on_press: entry.text += self.text
        CustButton:
            text: '3'
            on_press: entry.text += self.text
        CustButton:
            text: '*'
            on_press: entry.text += self.text
        CustButton:
            text: '0'
            on_press: entry.text += self.text
        CustButton:
            text: '.'
            on_press: entry.text += self.text
        CustButton:
            text: '='
            on_press: calculator.calculate(entry.text)
        CustButton:
            text: '/'
            on_press: entry.text += self.text
        CustButton:
            # text: 'AC'
            text: 'Сброс'
            on_press: entry.text = ''
        CustButton:
            text: 'Реклама'
            on_press: entry.text += self.text
        CustButton:
            text: 'n!'
            on_press: calculator.get_factorial(entry.text)
        CustButton:
            text: '%'
            on_press: entry.text += self.text
