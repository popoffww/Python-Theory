<CustButton@Button>:
    font_size: 32

<CalcBoxLayout>:
    id: calculator
    display: entry
    orientation: 'vertical'
    Label:
        id: entry
        font_size: 40
        size_hint: 1, .2
        halign: 'right'
        valign: 'middle'
        text_size: 750, 750

    GridLayout:
        cols: 4
        size_hint: 1, .5
        # spacing: 1

        CustButton:
            text: '7'
            on_press: entry.text += self.text
        CustButton:
            text: '8'
            on_press: entry.text += self.text
        CustButton:
            text: '9'
            on_press: entry.text += self.text
        CustButton:
            text: '+'
            on_press: entry.text += self.text
        CustButton:
            text: '4'
            on_press: entry.text += self.text
        CustButton:
            text: '5'
            on_press: entry.text += self.text
        CustButton:
            text: '6'
            on_press: entry.text += self.text
        CustButton:
            text: '-'
            on_press: entry.text += self.text
        CustButton:
            text: '1'
            on_press: entry.text += self.text
        CustButton:
            text: '2'
            on_press: entry.text += self.text
        CustButton:
            text: '3'
            on_press: entry.text += self.text
        CustButton:
            text: '*'
            on_press: entry.text += self.text
        CustButton:
            text: '0'
            on_press: entry.text += self.text
        CustButton:
            text: '.'
            on_press: entry.text += self.text
        CustButton:
            text: '='
            on_press: calculator.calculate(entry.text)
        CustButton:
            text: '/'
            on_press: entry.text += self.text
        CustButton:
            text: 'Сброс'
            on_press: entry.text = ''
        CustButton:
            text: 'Реклама'
            on_press: entry.text += self.text
        CustButton:
            text: 'n!'
            on_press: calculator.factorial(entry.text)
        CustButton:
            text: '%'
            on_press: entry.text += self.text
