

<Container>:
    rows: 3

    txt_prop: text_id
    pass_prop: pass_id

    AnchorLayout:

        size_hint: 1, 0.1

        TextInput:
            id: text_id
            multiline: False
            font_size: 30
            input_type: 'number'
            input_filter: 'int'


    GridLayout:
        rows: 2

        BoxLayout:
            padding: [0,60,0,0]
            Label:
                text: 'Новый пароль'
                font_size: 40


        BoxLayout:
            padding: [0,0,0,60]
            Label:
                id: pass_id
                text: '0'
                font_size: 40


    BoxLayout:
        size_hint: 0.9, 0.2
        padding: [270,10,270,30]

        Button:
            id: btn
            text: 'Создать пароль' if btn.state == 'normal' else 'Создаю пароль'
            font_size: 30
            on_release:
                root.get_password()
